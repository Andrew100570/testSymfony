
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ role }}! ✅ Number {{ id }}</h1>
    <h1>Nice to meet you{{ name }}! ✅</h1>

    <h1>Application</h1>

    {{ form_start(formApplication) }}

    {{ form_row(formApplication.discription) }}
    {{ form_row(formApplication.username) }}
    {{ form_row(formApplication.filename) }}
    {{ form_row(formApplication.status) }}
    {{ form_row(formApplication.comments) }}

    <button type="submit" class="btn">Add application</button>
    {{ form_end(formApplication) }}

</div>
    {% if role == 'admin' %}

    {% for application in applications %}
        <a href="{{ path('comment_form', {'slug': application.id}) }}">{{ application.id }}</a>
        <li>Номер заявки:{{ application.id }}</li>
        <li>Описание:{{ application.discription }}</li>
        <li>{{ application.timeofcreation |date('d-m-Y')}}</li>
        <li>{{ application.lstedittime |date('d-m-Y')}}</li>
        <li>Данные пользователя:{{ application.username }}</li>
        <li>Cтатус:{{ application.status }}</li>
        <li>Комментарий:{{ application.comments }}</li>
        <br>

    {% endfor %}
    {% endif %}
{% endblock %}
